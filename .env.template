# SimGen AI Environment Configuration Template
# Copy to .env and update values for your environment

# ==============================================================================
# APPLICATION
# ==============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=false
SERVER_ID=server-1

# ==============================================================================
# API SERVER
# ==============================================================================
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgresql://simgen:simgen@localhost:5432/simgen
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==============================================================================
# REDIS CACHE
# ==============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_MEMORY_SIZE=100

# ==============================================================================
# LLM APIS
# ==============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# ==============================================================================
# COMPUTER VISION
# ==============================================================================
CV_MAX_IMAGE_SIZE=10485760  # 10MB
CV_CONFIDENCE_THRESHOLD=0.3
CV_ENABLE_GPU=false
CV_SERVICE_URL=http://cv_service:8001  # For separated CV service

# ==============================================================================
# PHYSICS ENGINE
# ==============================================================================
PHYSICS_TIMESTEP=0.002
PHYSICS_MAX_SIM_TIME=30
PHYSICS_HEADLESS=true

# ==============================================================================
# WEBSOCKET
# ==============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_SESSION_TTL=3600
WS_MAX_SESSIONS=1000

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600
RATE_LIMIT_BURST_SIZE=10

# ==============================================================================
# REQUEST LIMITS
# ==============================================================================
MAX_REQUEST_SIZE=52428800  # 50MB
MAX_IMAGE_SIZE=10485760     # 10MB
MAX_TEXT_LENGTH=10000
MAX_MJCF_SIZE=5242880       # 5MB

# ==============================================================================
# CIRCUIT BREAKER
# ==============================================================================
CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIMEOUT=60

# ==============================================================================
# PERFORMANCE
# ==============================================================================
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_PROFILING=false

# ==============================================================================
# SECURITY
# ==============================================================================
SECRET_KEY=change-this-in-production-to-a-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440  # 24 hours
ENABLE_AUTH=false  # Set to true in production

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================================================
# FILE STORAGE
# ==============================================================================
UPLOAD_DIR=/tmp/simgen/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_CV_PIPELINE=true
ENABLE_LLM_FALLBACK=true