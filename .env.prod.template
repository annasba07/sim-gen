# SimGen AI Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Database Configuration
DB_NAME=simgen_ai
DB_USER=simgen_user
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
API_KEYS=your_api_key_1,your_api_key_2,admin_key_here

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password_here

# SSL Certificate Paths (Update these for your certificates)
SSL_CERT_PATH=./ssl/fullchain.pem
SSL_KEY_PATH=./ssl/privkey.pem

# Performance Settings
WORKERS=4
MAX_CONNECTIONS=100
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
DEBUG=false

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Alerts Configuration (Optional)
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK