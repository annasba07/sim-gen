# Frontend Environment Variables
# Copy this to .env.local and update values

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for physics streaming
NEXT_PUBLIC_PHYSICS_WS_URL=ws://localhost:8000/api/v2/physics/ws/stream

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Target frame rate for physics rendering
NEXT_PUBLIC_TARGET_FPS=60

# Enable binary WebSocket mode (recommended)
NEXT_PUBLIC_BINARY_MODE=true